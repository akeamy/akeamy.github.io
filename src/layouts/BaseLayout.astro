---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const { title, current } = Astro.props;
const fullTitle = title ? `${title} • Alexandra Keamy` : 'Alexandra Keamy • AI Scientist';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{fullTitle}</title>
    <meta name="description" content="Agentic AI, RAG, knowledge graphs, and secure LLM systems. Portfolio and writing by Alexandra Keamy." />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content="Production-grade agentic AI systems, RAG pipelines, knowledge graphs, and secure deployments." />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <Nav current={current} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
